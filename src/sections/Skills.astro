---
import { SKILLS } from "../consts";
---

<section id="#skills" class="flex flex-col gap-10">
    <h2 class="md:text-3xl text-2xl text-center font-bold">Habilidades:</h2>
    <ul
        class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-20 mx-auto"
    >
        {
            SKILLS.map(({ img, name }) => (
                <li
                    class="flex flex-col items-center gap-2 transform hover:scale-105 transition-transform"
                    role="contentinfo"
                >
                    <img
                        class="w-24 h-24  bg-terciary-light/90 dark:bg-terciary-dark/90 rounded-2xl p-2"
                        src={img}
                        alt={`${name} skill`}
                        draggable="false"
                        role="img"
                    />
                    <p class="font-bold">{name}</p>
                </li>
            ))
        }
    </ul>
</section>
