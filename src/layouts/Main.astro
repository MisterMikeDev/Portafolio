---
import Metas from "../components/Metas.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="es">
    <head>
        <Metas />
        <title>{title}</title>
        <style>
            @font-face {
                font-family: "Inter";
                src: url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap")
                    format("woff2");
            }
            html {
                scroll-behavior: smooth;
                scroll-padding-top: 8.5rem;
            }
        </style>
    </head>
    <body
        class="bg-primary-light text-primary-light dark:bg-primary-dark dark:text-primary-dark font-inter relative flex flex-col min-h-screen"
    >
        <Header />
        <main
            class="max-w-[1400px] mx-auto py-10 w-full flex-grow md:gap-20 gap-16 flex flex-col"
        >
            <slot />
        </main>
        <Footer />
    </body>
</html>
